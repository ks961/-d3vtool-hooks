{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "noEmit": false,
    "declaration": true,               // Enable declaration files
    "declarationDir": "./dist",        // Output declaration files in the dist folder
    "outDir": "./dist",                // Output compiled JS files in the dist folder
    "jsx": "react-jsx",
    "strict": true
  },
  "include": ["src", "app", "src/hooks"],
  "exclude": ["node_modules"]
}